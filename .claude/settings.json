{
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "WebSearch",
      "Bash(npm run:*)",
      "Bash(git:*)",
      "Bash(docker:*)",
      "mcp__gemini-google-search__*",
      "mcp__chrome-devtools__*",
      "mcp__next-devtools__*"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx -y gh-setup-hooks",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "plansDirectory": "./.claude/plans",
  "enableAllProjectMcpServers": true
}
