{
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "WebSearch",
      "Bash(npm run:*)",
      "Bash(git:*)",
      "Bash(docker:*)",
      "mcp__gemini-google-search__*",
      "mcp__chrome-devtools__*",
      "mcp__next-devtools__*"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx -y gh-setup-hooks",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".ts\") or endswith(\".jsx\") or endswith(\".tsx\"))' | tee /dev/stderr | xargs -r npx prettier --write"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && npm run format"
          }
        ]
      }
    ]
  },
  "plansDirectory": "./.claude/plans",
  "enableAllProjectMcpServers": true
}
