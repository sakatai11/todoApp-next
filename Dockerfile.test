FROM mcr.microsoft.com/playwright:v1.54.1-focal

# Node.jsのバージョンを指定
ARG NODE_VERSION=20

# 作業ディレクトリを設定
WORKDIR /app

# パッケージファイルをコピー
COPY package*.json ./

# 依存関係をインストール
RUN npm ci --legacy-peer-deps

# Playwrightブラウザをインストール
RUN npx playwright install

# アプリケーションコードをコピー
COPY . .

# 環境変数を設定
ENV NODE_ENV=test
ENV CI=true

# E2Eテストを実行するコマンド
CMD ["npm", "run", "test:e2e"]